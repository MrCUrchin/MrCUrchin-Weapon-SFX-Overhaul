<DFAdditionSFX>    
<!-- Automatics (Loop Needed?) -->
    <!-- Pipe SMG "gunMGT0PipeMachineGun" (+) -->
            <!-- Adds Pipe SMG Suppressed as a New Item Modifer -->
        <append xpath="/item_modifiers/item_modifier">
            <item_property_overrides name="gunMGT0PipeMachineGun">
                <property name="Sound_start" value="pipe_smg_s_fire"/>
                <!--  <property name="Sound_end" value="silencefiller"/> ???? -->
                <property name="Sound_loop" value="pipe_smg_s_fire"/>
            </item_property_overrides>        
        </append>

    <!-- Tactical AR "gunMGT2TacticalAR" | value="ak47_s_fire" (+) -->
        <set xpath="/item_modifiers/item_modifier/item_property_overrides[@name='gunMGT2TacticalAR']/property[@value='ak47_s_fire']/@value">tacticalar_s_fire</set>

<!-- Pistols -->
    <!-- Desert Vulture "gunHandgunT3DesertVulture" | value="pump_shotgun_s_fire" (+) -->
        <set xpath="/item_modifiers/item_modifier/item_property_overrides[@name='gunHandgunT3DesertVulture']/property[@value='pump_shotgun_s_fire']/@value">desertvulture_s_fire</set>  
    

<!-- Shotguns -->
    <!-- Auto Shotgun "gunShotgunT3AutoShotgun" | value="pump_shotgun_s_fire" (+) -->
        <set xpath="/item_modifiers/item_modifier/item_property_overrides[@name='gunShotgunT3AutoShotgun']/property[@value='pump_shotgun_s_fire']/@value">auto_shotgun_s_fire</set> 

    <!-- Double Barrel Shotgun "gunShotgunT1DoubleBarrel" | value="pump_shotgun_s_fire" (+) -->
